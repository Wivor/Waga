            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19" android:textSize="24sp"
            android:textColor="@color/textColor" app:layout_constraintTop_toBottomOf="@+id/textView16"
