<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="475dp"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp"
        android:layout_gravity="center">


    <Button
            android:text="Edytuj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPopupEdit"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView16"
            android:textColor="@color/textColor" android:background="@color/buttonBackground"/>
    <TextView
            android:text="Produkt:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14" android:textColor="@color/textColor"
            android:textSize="24sp" android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView16"
    />
    <TextView
            android:text="xxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textPopupName" android:textSize="24sp"
            android:textColor="@color/textColor" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textPopupWeight"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"/>
    <TextView
            android:text="Masa:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16" android:textColor="@color/textColor"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            app:layout_constraintBottom_toTopOf="@+id/buttonPopupEdit"/>
    <TextView
            android:text="xxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textPopupWeight" android:textSize="24sp"
            android:textColor="@color/textColor" app:layout_constraintTop_toBottomOf="@+id/textPopupName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonPopupEdit"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editPopupName"
            android:textSize="24sp" android:background="@android:color/white" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/textPopupWeight"/>
    <Button
            android:text="ZatwierdÅº"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPopupOK" android:textColor="@color/textColor"
            android:background="@color/buttonBackground" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/buttonPopupCancel"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="invisible"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textPopupWeight"/>
    <Button
            android:text="Anuluj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPopupCancel" android:textColor="@color/textColor"
            android:background="@color/buttonBackground" app:layout_constraintStart_toEndOf="@+id/buttonPopupOK"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="invisible"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textPopupWeight"/>
</android.support.constraint.ConstraintLayout>