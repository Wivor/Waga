            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20" android:textSize="24sp"
            android:textColor="@color/textColor" app:layout_constraintTop_toBottomOf="@+id/textView18"
            app:layout_constraintBottom_toTopOf="@+id/ButtonEdit" app:layout_constraintStart_toEndOf="@+id/textView19"
