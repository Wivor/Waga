<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="475dp"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp"
        android:layout_gravity="center">
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textContMass" android:textSize="24sp"
            android:textColor="@color/textColor" app:layout_constraintTop_toBottomOf="@+id/textContId"
            app:layout_constraintBottom_toTopOf="@+id/textContProd" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp"/>
    <TextView
            android:text="Masa:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView22" android:textSize="24sp"
            android:textColor="@color/textColor" app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/textView19" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>
    <TextView
            android:text="ID:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textColor="@color/textColor"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" app:layout_constraintBottom_toTopOf="@+id/textContMass"/>
    <TextView
            android:text="Produkt:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19" android:textColor="@color/textColor"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textContMass"
            app:layout_constraintBottom_toTopOf="@+id/buttonContOK"/>
    <TextView
            android:text="xxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textContId" android:textColor="@color/textColor"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textContMass"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textContProd" android:textColor="@color/textColor"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textContMass"
            app:layout_constraintBottom_toTopOf="@+id/buttonContCancel"/>
    <Button
            android:text="Edytuj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonContEdit" android:textColor="@color/textColor"
            android:background="@color/buttonBackground" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/buttonContDelete"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView19"/>
    <Button
            android:text="Usuń"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonContDelete" android:textColor="@color/textColor"
            android:background="@color/buttonBackground" app:layout_constraintStart_toEndOf="@+id/buttonContEdit"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textContProd"/>
    <Button
            android:text="Zatwierdź"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonContOK" android:textColor="@color/textColor"
            android:background="@color/buttonBackground"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/buttonContCancel"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView19" android:visibility="invisible"/>
    <Button
            android:text="Anuluj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonContCancel" android:textColor="@color/textColor"
            android:background="@color/buttonBackground"
            app:layout_constraintStart_toEndOf="@+id/buttonContOK"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textContProd" android:visibility="invisible"/>
    <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerContProd" android:background="@android:color/white"
            android:popupBackground="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
            android:spinnerMode="dropdown" app:layout_constraintTop_toBottomOf="@+id/textContMass"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonContDelete"
            android:visibility="invisible"/>
</android.support.constraint.ConstraintLayout>